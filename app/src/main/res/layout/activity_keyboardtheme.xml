<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Keyboardtheme"
    android:background="@color/bg"
    >


    <LinearLayout
        android:id="@+id/theme_light_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:background="#EBEBEB"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/theme_light"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/theme_light1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:background="@color/darkorange"
            android:fontFamily="@font/source_serif_pro"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Theme Light"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/theme_dark_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/theme_light_layout"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"


        >

        <ImageView
            android:id="@+id/theme_dark"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/theme_dark1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:background="@color/darkorange"
            android:fontFamily="@font/source_serif_pro"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Theme Dark"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>